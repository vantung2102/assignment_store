doctype html
html
  head
    title AssignmentStore
    meta[name="viewport" content="width=device-width,initial-scale=1"]
    = csrf_meta_tags
    = csp_meta_tag
    = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'
  body
    = render 'layouts/header'
    - if notice
      .container-fluid#notice_wraper
        p.notice = notice
    - elsif flash
        - flash.each do |message_type, message|
          div class="alert alert-dismissible alert-#{message_type}" style="font-size: 15px; align-items: center;text-align: center;background: #e8a62d59;color: red;"
            button class="close" data-dismiss="alert" type="button" Ã—
            = message
    / ==== loader ====
    #loader.display-flex
      .position-center-center
        .ldr
    div[class="show_body" style="display:none"]
      = yield
    = render 'layouts/footer'
    